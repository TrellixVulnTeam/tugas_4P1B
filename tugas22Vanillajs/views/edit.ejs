<!DOCTYPE html>
<html lang="en">

<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
</head>

<body>
    <div class="container">
        <% findResult.forEach( item => { %>
            <div class="card">
                <div class="card-header" style="background-color: rgb(11, 133, 255);">
                    <h1 class="text-center">FIture EDIT</h1>
                </div>
                <form action="" method="post">
                    <div class="card-body" style="background-color: rgb(5, 255, 226);">
                        <input type="hidden" id="id" name="id" value="<%= item._id %>">
                        <div class="mb-3 row">
                            String : <input type="text" size="30" id="string" name="string" 
                            value="<%= item.string %>" placeholder="masukkan String">
                        </div>
                        <div class="mb-3 row">
                            Integer : <input type="number" size="30" id="integer" name="integer"
                                value="<%= item.integer %>" placeholder="masukkan Integer">
                        </div>
                        <div class="mb-3 row">
                            Float : <input type="number" step="any" size="30" id="float" name="float"
                                value="<%= item.float %>" placeholder="masukkan Float">
                        </div>
                        <div class="mb-3 row">
                            Date : <input type="date " size="30" id="date" name="date" value="<%= moment(item.date).format("MMM DD YYYY") %>">
                        </div>
                        <div class="mb-3 row">
                            <label for="Boolean">Boolean :</label>
                            <select id="boolean" name="boolean">
                                <option value="Lainnya" disabled selected>Lainnya</option>
                                <option value= true <%=item.boolean== true ? " selected " : " " %>>True</option>
                                <option value= false <%=item.boolean== false ? " selected " : " " %>>False</option>
                            </select>
                        </div>
                        <button class=" btn btn-primary" type="submit"> SAVE </button>
                        <a class=" btn btn-primary" style="margin-left: 1100px;" href="/">â†° Back</a>
                    </div>
                </form>
            </div>
            <% }) %>
    </div>
</body>

</html>