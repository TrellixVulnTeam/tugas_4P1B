<!DOCTYPE html>
<html lang="en">

<head>
    <title>list</title>

    <style>
        #customers {
            font-family: Arial, Helvetica, sans-serif;
            border-collapse: collapse;
            width: 100%;
        }

        #customers td,
        #customers th {
            border: 1px solid #ddd;
            padding: 8px;
        }

        #customers tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        #customers tr:hover {
            background-color: #ddd;
        }

        #customers th {
            padding-top: 12px;
            padding-bottom: 12px;
            text-align: left;
            background-color: #423d3d;
            color: white;
        }

        .atas {
            color: rgb(0, 0, 0);
            font-size: 18px;
            float: left;
            padding-left: 10px;
            padding-right: 10px;
            border: 1px solid rgb(77, 77, 77);
            border-radius: 9px;
            background: rgb(218, 213, 213);
        }

        a {
            color: rgb(0, 0, 0);
            font-size: 14px;
            float: middle;
            padding-left: 10px;
            padding-right: 10px;
            padding-top: 2px;
            padding-bottom: 2px;
            border: 1px solid rgb(0, 0, 0);
            border-radius: 9px;
            background: rgb(1, 206, 35);
        }

        .button {
            color: rgb(0, 0, 0);
            font-size: 14px;
            float: middle;
            padding-left: 10px;
            padding-right: 10px;
            border: 1px solid rgb(0, 0, 0);
            border-radius: 9px;
            background: rgb(206, 1, 1);
        }

        a:link {
            text-decoration: none;
        }

        a:visited {
            text-decoration: none;
        }

        a:hover {
            text-decoration: none;
        }
    </style>
    </style>

</head>

<body>
    <table id="customers">
        <thead>
            <tr>
                <th>ID</th>
                <th>String</th>
                <th>Integer</th>
                <th>Float</th>
                <th>Date</th>
                <th>Boolean</th>
                <th>Update</th>
            </tr>
        </thead>
        <tbody>
            <% rows.forEach((item, index)=> { %>
                <tr>
                    <td>
                        <%= index + 1 %>
                    </td>
                    <td>
                        <%= item.String %>
                    </td>
                    <td>
                        <%= item.Integer %>
                    </td>
                    <td>
                        <%= item.Float %>
                    </td>
                    <td>
                        <%= item.Date %>
                    </td>
                    <td>
                        <%= item.Boolean %>
                    </td>
                    <td>
                        <a href="/edit/<%= index %>">Edit</a>
                        <a class="button" href="/delete/<%= index %>">Delete</a>
                    </td>
                </tr>
                <% }) %>
        </tbody>
    </table>

    <br>
    <a class="atas" href="/add">+</a>

</body>

</html>