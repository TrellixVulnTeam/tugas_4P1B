<%- include('../partial/header') %>

    <div class="container">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>No.</th>
                    <th>No Invoice</th>
                    <th>Tanggal</th>
                    <th>Total Harga</th>
                    <th>Total Bayar</th>
                    <th>Kembalian</th>
                </tr>
            </thead>
            <tbody>
                <% rows.forEach((item, index)=> { %>
                    <tr>
                        <td><%= index + 1 %></td>
                        <td><%= item.no_invoice%></td>
                        <td><%= moment(item.date).format('DD MMMM YYYY') %></td>
                        <td class="right-position"><%= currencyFormatter.format(item.total_harga) %></td>
                        <td class="right-position"><%= currencyFormatter.format(item.total_bayar) %></td>
                        <td class="right-position"><%= currencyFormatter.format(item.kembalian) %></td>
                    </tr>
                    <% }) %>
            </tbody>

        </table>
    </div>

<%- include('../partial/footer') %>